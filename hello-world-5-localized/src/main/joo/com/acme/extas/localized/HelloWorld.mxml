<?xml version="1.0" encoding="UTF-8"?>
<local:HelloWorldBase xmlns:fx="http://ns.adobe.com/mxml/2009"
                      xmlns="exml:ext.config"
                      xmlns:local="com.acme.extas.localized.*">
  <fx:Metadata>
    [ResourceBundle("com.acme.extas.localized.HelloWorld")]
  </fx:Metadata>
  <fx:Script><![CDATA[
    public native function HelloWorld(config:HelloWorld = null);
    ]]></fx:Script>

  <local:items>
    <Panel title="{resourceManager.getString('com.acme.extas.localized.HelloWorld', 'panel_title')}">
      <tbar>
        <Toolbar>
          <items>
            <Button text="{resourceManager.getString('com.acme.extas.localized.HelloWorld', 'button_label')}" onClick="{onClick(event.source)}"/>
            <Button text="{resourceManager.getString('com.acme.extas.localized.HelloWorld', 'menu_label')}">
              <menu>
                <local:LocaleMenu/>
              </menu>
            </Button>
            <DateField value="{new Date()}"/>
          </items>
        </Toolbar>
      </tbar>
    </Panel>
  </local:items>
</local:HelloWorldBase>
