<?xml version="1.0" encoding="UTF-8"?>
<exml:class xmlns:exml="http://www.jangaroo.net/exml/0.8"
                xmlns="exml:ext.config"
                baseClass="ChangeLocaleActionBase">
  <exml:cfg name="locale" type="String">
    <exml:description>The new locale to set.</exml:description>
  </exml:cfg>

  <exml:description>
    Change the current locale of the Jangaroo Ext AS application.
  </exml:description>

  <action disabled="{config.locale === CURRENT_LOCALE}"
          handler="{changeLocale}"/>

</exml:class>
