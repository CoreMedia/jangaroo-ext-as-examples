  <layout>
    <layout:BorderLayout padding="0 5 5 5"/>  <!-- pad the layout from the window edges -->
  </layout>
  <items>
    <Component u:id="app-header"
               region="north"
               height="40"
               html="Ext Portal"/>
    <Container region="center"
               layout="border">
      <items>
        <Panel u:id="app-options"
               title="Options"
               region="west"
               animCollapse="true"
               width="200"
               minWidth="150"
               maxWidth="400"
               u:split="true"
               collapsible="true">
          <layout>
            <layout:AccordionLayout animate="true"/>
          </layout>
          <items>
            <Panel html="{shortBogusMarkup}"
                   title="Navigation"
                   autoScroll="true"
                   border="false"
                   iconCls="nav"/>
            <Panel title="Settings"
                   html="{shortBogusMarkup}"
                   border="false"
                   autoScroll="true"
                   iconCls="settings"/>
          </items>
        </Panel>

        <p:PortalPanel u:id="app-portal"
                       region="center">
          <p:items>
            <p:PortalColumn u:id="col-1">
              <p:items>
                <p:Portlet u:id="portlet-1"
                           title="Grid Portlet">
                  <p:items>
                    <p:gridPortlet/>
                  </p:items>
                </p:Portlet>
                <p:Portlet u:id="portlet-2"
                           title="Portlet 2"
                           html="{shortBogusMarkup}"/>
              </p:items>
            </p:PortalColumn>

            <p:PortalColumn u:id="col-2">
              <p:items>
                <p:Portlet u:id="portlet-3"
                           title="Portlet 3"
                           html="{bogusMarkup}"/>
              </p:items>
            </p:PortalColumn>

            <p:PortalColumn u:id="col-3">
              <p:items>
                <p:Portlet u:id="portlet-4"
                           title="Stock Portlet">
                  <p:items>
                    <p:ChartPortlet/>
                  </p:items>
                </p:Portlet>
              </p:items>
            </p:PortalColumn>

          </p:items>
        </p:PortalPanel>
      </items>
    </Container>
  </items>
</Viewport>
