<?xml version="1.0" encoding="UTF-8"?>
<Panel xmlns:fx="http://ns.adobe.com/mxml/2009" 
          xmlns="exml:ext.config">
    <fx:Script><![CDATA[
      import ext.MessageBox;
      import ext.StringUtil;
      import ext.button.Button;
  
      public native function HelloWorld(config:HelloWorld = null);
      ]]></fx:Script>
  
    <fx:Declarations>
      <!--- The name of the user to greet. -->
     <fx:String id="user"/>
    </fx:Declarations>

    <items>
      <Panel title="Hello MXML World!">
        <tbar>
          <Toolbar>
            <items>
              <Button text="Click me!" handler="{function(button:Button):void {
                    MessageBox.alert(StringUtil.format('Hello {0}!', user),
                      StringUtil.format('{0} clicked on button \'{1}\'.', user, button.getText()));
                  }
                     }"/>
            </items>
          </Toolbar>
        </tbar>
      </Panel>
    </items>

</Panel>
