            xmlns:extends="ext.*"
            xmlns:cfg="com.acme.extas.portal.config.*"
            xmlns:exml="http://www.jangaroo.net/exml/0.8"
            xmlns="exml:ext.config">
  <fx:Script><![CDATA[
    import com.acme.extas.portal.config.settingsAction;
    import ext.MessageBox;
    import ext.Panel;

    public native function SettingsAction(config:com.acme.extas.portal.config.settingsAction = null);
  ]]></fx:Script>
  <fx:Metadata>[DefaultProperty("config")]</fx:Metadata>
  <fx:Declarations>
    <cfg:settingsAction id="config"/>
  </fx:Declarations>

  <action iconCls="gear"
