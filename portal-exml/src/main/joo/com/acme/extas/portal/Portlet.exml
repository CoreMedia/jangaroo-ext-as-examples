<?xml version="1.0" encoding="ISO-8859-1"?>
<exml:component xmlns:exml="http://www.jangaroo.net/exml/0.8"
                xmlns="exml:ext.config"
                xmlns:portal="exml:com.acme.extas.portal.config">
  <exml:description>
    A portlet is placed in a portlet column, has some controls ("tools"), and can show
    arbitrary content. By default, a portlet is collapsible, has a setting tool ("gear")
    and a close tool.
  </exml:description>

  <panel anchor="100%"
         frame="true"
         collapsible="true"
         draggable="true"
         cls="x-portlet">
    <items>
      <button>
        <baseAction>
          <portal:settingsAction/>
        </baseAction>
      </button>
    </items>
    <tools>
      <button id="close">
        <handler>{function(e:*, target:*, panel:Panel):void {
          panel.ownerCt.remove(panel, true);
          }}</handler>
      </button>
    </tools>
  </panel>
</exml:component>
