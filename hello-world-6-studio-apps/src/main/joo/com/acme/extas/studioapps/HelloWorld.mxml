<?xml version="1.0" encoding="UTF-8"?>
<local:HelloWorldBase xmlns:fx="http://ns.adobe.com/mxml/2009"
                      xmlns="exml:ext.config"
                      xmlns:local="com.acme.extas.studioapps.*">
  <fx:Script><![CDATA[
    public native function HelloWorld(config:HelloWorld = null);
    ]]></fx:Script>

    <local:items>
      <Panel title="Hello Studio App World!">
        <items>
          <Toolbar>
            <items>
              <TextField emptyText="Search..." itemId="{SEARCH_TEXT_FIELD_ITEM_ID}"/>
              <Button text="Search in Studio Library!" onClick="search(event.source)"/>
            </items>
          </Toolbar>
          <Toolbar>
            <layout>
              <layout_VBox align="begin"/>
            </layout>
            <items >
              <Button text="Show opened content items!" onClick="showItems(event.source)"/>
              <Label itemId="{SHOW_ITEMS_LABEL_ITEM_ID}"/>
            </items>
          </Toolbar>
        </items>

      </Panel>
    </local:items>

</local:HelloWorldBase>
