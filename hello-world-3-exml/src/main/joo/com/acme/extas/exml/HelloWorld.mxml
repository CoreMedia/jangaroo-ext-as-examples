<?xml version="1.0" encoding="UTF-8"?>
<extends:Viewport
                xmlns:fx="http://ns.adobe.com/mxml/2009"
                xmlns:extends="ext.*"
                xmlns:cfg="com.acme.extas.exml.config.*"
                xmlns:exml="http://www.jangaroo.net/exml/0.8"
                xmlns="exml:ext.config">
  <fx:Script><![CDATA[
    import com.acme.extas.exml.config.helloWorld;
    import ext.MessageBox;
    import ext.Button;
    import ext.util.StringUtil;

    public native function HelloWorld(config:com.acme.extas.exml.config.helloWorld = null);
  ]]></fx:Script>
  <fx:Metadata>[DefaultProperty("config")]</fx:Metadata>
  <fx:Declarations>
    <cfg:helloWorld id="config"/>
  </fx:Declarations>

  <viewport>
    <items>
      <panel title="Hello World!">
        <tbar>
          <toolbar>
            <items>
              <button text="Click me!" handler="{function(button:Button):void {
                    MessageBox.alert(StringUtil.format('Hello {0}!', config.user),
                      StringUtil.format('{0} clicked on button \'{1}\'.', config.user, button.getText()));
                  }
                     }"/>
            </items>
          </toolbar>
        </tbar>
      </panel>
    </items>
  </viewport>

  <fx:Script><![CDATA[
    public static function main(config:helloWorld):void {
      new HelloWorld(config);
    }
    ]]></fx:Script>
</extends:Viewport>
