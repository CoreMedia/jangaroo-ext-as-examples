<?xml version="1.0" encoding="UTF-8"?>
<Viewport xmlns:fx="http://ns.adobe.com/mxml/2009"
          xmlns="ext:widget"
          xmlns:store="ext:store">
  <fx:Script><![CDATA[
    import ext.Button;
    import ext.MessageBox;
    import ext.util.StringUtil;
    ]]></fx:Script>

  <fx:Declarations>
    <!---
     The name of the user to greet.
    -->
    <fx:String id="user">Joe</fx:String>
  </fx:Declarations>

    <items>
      <Panel title="Hello World!">
        <tbar>
          <Toolbar>
            <items>
              <Button text="Click me!">
                <handler>{function(button:Button):void {
                    MessageBox.alert(StringUtil.format('Hello {0}!', user),
                      StringUtil.format('{0} clicked on button \'{1}\'.', user, button.getText()));
                  }
                }</handler>
              </Button>
            </items>
          </Toolbar>
        </tbar>
      </Panel>
      <Box height="200"/>
      <Grid>
        <columns>
          <WidgetColumn/>
          <TemplateColumn/>
        </columns>
        <store>
          <store:Array/>
        </store>
      </Grid>
    </items>

</Viewport>
