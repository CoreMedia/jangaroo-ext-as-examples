<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
		  http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5">
  <display-name>Ext AS Examples</display-name>
  <description>A collection of Ext AS examples for getting started.</description>

  <context-param>
    <!-- This Context Param advises the Jetty Default Servlet NOT to lock the
         files. Not locking the files eases the development process a lot -->
    <param-name>org.eclipse.jetty.servlet.Default.useFileMappedBuffer</param-name>
    <param-value>false</param-value>
  </context-param>
  
</web-app>
